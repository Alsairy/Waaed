# Database Configuration
DefaultConnection=Server=localhost;Database=UnifiedEducationPlatform;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true
Redis=localhost:6379
AzureStorage=DefaultEndpointsProtocol=https;AccountName=unifiededucation;AccountKey=your_account_key_here;EndpointSuffix=core.windows.net

# API Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000
API_GATEWAY_URL=http://localhost:8080

# Service URLs
SIS_SERVICE_URL=http://localhost:5001
LMS_SERVICE_URL=http://localhost:5002
ERP_SERVICE_URL=http://localhost:5003
EXAMS_SERVICE_URL=http://localhost:5004
BPM_SERVICE_URL=http://localhost:5005
ANALYTICS_SERVICE_URL=http://localhost:5006
AI_SERVICE_URL=http://localhost:5007
ADMIN_SERVICE_URL=http://localhost:5008
