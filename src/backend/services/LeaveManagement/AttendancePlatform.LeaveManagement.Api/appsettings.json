{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=sql-server,1433;Database=Hudur;User Id=sa;Password=${DB_PASSWORD};TrustServerCertificate=true;"
  },
  "JWT": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "Hudur",
    "Audience": "HudurUsers",
    "AccessTokenExpirationMinutes": "60",
    "RefreshTokenExpirationDays": "7"
  },
  "LeaveManagement": {
    "DefaultAnnualLeaveAllocation": 21,
    "DefaultSickLeaveAllocation": 10,
    "MaxAdvanceRequestDays": 90,
    "MinAdvanceRequestDays": 1,
    "WorkingDays": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
    "AutoApprovalThresholdHours": 4,
    "RequireManagerApproval": true,
    "AllowCarryForward": true,
    "MaxCarryForwardDays": 5,
    "LeaveYearStartMonth": 1,
    "Notifications": {
      "SendEmailNotifications": true,
      "SendPushNotifications": true,
      "NotifyManagerOnRequest": true,
      "NotifyUserOnApproval": true,
      "ReminderDaysBeforeLeave": 3
    }
  }
}

