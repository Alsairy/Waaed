{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Ocelot": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "Hudur_Super_Secret_Key_2024_Enterprise_Grade_Security",
    "Issuer": "Hudur",
    "Audience": "Hudur.Users",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  "ApiGateway": {
    "Name": "Hudur API Gateway",
    "Version": "1.0.0",
    "Description": "Enterprise-grade API Gateway for Hudur platform",
    "Contact": {
      "Name": "Hudur Support",
      "Email": "support@hudur.sa",
      "Url": "https://hudur.sa/support"
    }
  },
  "RateLimiting": {
    "EnableGlobalRateLimit": true,
    "GlobalRateLimit": {
      "Period": "1m",
      "Limit": 1000
    },
    "ClientRateLimits": {
      "Premium": {
        "Period": "1m",
        "Limit": 5000
      },
      "Standard": {
        "Period": "1m",
        "Limit": 1000
      },
      "Basic": {
        "Period": "1m",
        "Limit": 500
      }
    }
  },
  "LoadBalancing": {
    "DefaultType": "LeastConnection",
    "HealthCheckInterval": 30,
    "HealthCheckTimeout": 5
  },
  "Caching": {
    "DefaultTtlSeconds": 300,
    "AuthCacheTtlSeconds": 900,
    "StaticContentTtlSeconds": 3600
  },
  "Security": {
    "EnableApiKeyAuthentication": true,
    "EnableJwtAuthentication": true,
    "EnableCors": true,
    "AllowedOrigins": ["*"],
    "EnableHttpsRedirection": true,
    "EnableRequestSizeLimit": true,
    "MaxRequestSizeBytes": 10485760
  },
  "Monitoring": {
    "EnableRequestLogging": true,
    "EnablePerformanceLogging": true,
    "EnableErrorLogging": true,
    "LogRetentionDays": 30
  },
  "ServiceDiscovery": {
    "Provider": "Consul",
    "ConsulHost": "localhost",
    "ConsulPort": 8500,
    "EnableHealthChecks": true,
    "HealthCheckInterval": 30
  },
  "CircuitBreaker": {
    "ExceptionsAllowedBeforeBreaking": 3,
    "DurationOfBreakInSeconds": 30,
    "TimeoutInSeconds": 10
  },
  "Retry": {
    "RetryCount": 3,
    "RetryDelayInSeconds": 2,
    "ExponentialBackoff": true
  }
}

